{{page-title "TestNew"}}
<h1>TD5</h1>
<ul>
  {{#each @model.contacts as |contact|}}
    <li>{{contact.nom}}
      <button type="button" {{action "delete" contact}}>Del</button>

      <LinkTo class="" @route="contacts.update" @model={{contact}}>Modifier</LinkTo>
    </li>
  {{/each}}
</ul>
<Input @value={{this.name}}/>
<button type="button" {{action "add" this.name}}>Ajouter</button>
{{#if @model.deletedsCount}}
  <button type="button" {{action "confirmer" @model.deleteds}}> confirmer</button>
  <button type="button" {{action "cancelDeletion" @model.deleteds}}> Annuler la suppression ({{@model.deletedsCount}})
  </button>
{{/if}}
{{outlet}}